# CallsBotOnChain Reverse Proxy Configuration
# Routes traffic to the web service

# HTTP to HTTPS redirect
:80 {
    # Redirect all HTTP traffic to HTTPS
    redir https://{host}{uri} permanent
}

# Main dashboard (HTTPS)
:443 {
    # Enable automatic HTTPS with self-signed cert (or use your domain)
    # For production with domain: tls your-email@domain.com
    tls internal
    
    # Enable compression
    encode gzip

    # Route to web service
    reverse_proxy web:8080 {
        # Health check
        health_uri /api/v2/quick-stats
        health_interval 30s
        health_timeout 5s
    }

    # Logging
    log {
        output file /var/log/caddy/access.log
        format json
    }

    # Security headers
    header {
        # Enable HSTS (force HTTPS for 1 year)
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        
        # XSS protection
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        
        # Content Security Policy
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:;"
        
        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}
